#%Module######################################################################
##
##      nems prerequisites
##

proc ModulesHelp {} {
     puts stderr "The prerequisites for compiling or running FV3 on Jet."
}

module purge
module load intel/18.0.3.222
module load impi/5.1.3.181
module load szip
module load hdf5/1.8.9
module load netcdf4/4.2.1.1
module load contrib anaconda

##
### NCEP libraries (download and build manually for the time being; https://github.com/NCAR/NCEPlibs)
###
set NCEPLIBS_DIR /lfs3/projects/hfv3gfs/GMTB/NCEPlibs-intel-18.0.3.222-20181105
setenv NCEPLIBS_DIR ${NCEPLIBS_DIR}
setenv NEMSIO_INC   ${NCEPLIBS_DIR}/include
setenv NEMSIO_LIB   ${NCEPLIBS_DIR}/lib/libnemsio_d.a
setenv BACIO_LIB4   ${NCEPLIBS_DIR}/lib/libbacio_4.a
setenv SP_LIBd      ${NCEPLIBS_DIR}/lib/libsp_v2.0.2_d.a
setenv W3EMC_LIBd   ${NCEPLIBS_DIR}/lib/libw3emc_d.a
setenv W3NCO_LIBd   ${NCEPLIBS_DIR}/lib/libw3nco_d.a

##
### use pre-compiled EMSF library for above compiler / MPI combination
##
setenv ESMF_DIR              /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181
setenv ESMF_INC              /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/include
setenv ESMF_BIN              /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/bin/binO/Linux.intel.64.intelmpi.default
setenv ESMF_LIB              /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/lib/libO/Linux.intel.64.intelmpi.default
setenv ESMF_MOD              /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/mod/modO/Linux.intel.64.intelmpi.default
setenv ESMFMKFILE            /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/lib/libO/Linux.intel.64.intelmpi.default/esmf.mk
prepend-path PATH            /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/bin/binO/Linux.intel.64.intelmpi.default
prepend-path LD_LIBRARY_PATH /lfs3/projects/hfv3gfs/lpan/esmf-7.1.0r/intel-18.0.3.222/impi-5.1.3.181/lib/libO/Linux.intel.64.intelmpi.default

# Set path to NetCDF
setenv NETCDF /apps/netcdf/4.2.1.1-intel

##
## SIONlib library
##
set    SIONLIB     /lfs3/projects/hfv3gfs/GMTB/sionlib-1.7.2/intel-18.0.3.222/impi-5.1.3.181
setenv SIONLIB     ${SIONLIB}
setenv SIONLIB_INC "-I${SIONLIB}/include -I${SIONLIB}/include/mod_64"
setenv SIONLIB_LIB "-L${SIONLIB}/lib -lsionmpi_f90_64 -lsionser_f90_64 -lsionmpi_64 -lsiongen_64 -lsionser_64 -lsioncom_64 -lsioncom_64_lock_none"

##
## Set compiler environment variables for CCPP
##
setenv CC  mpiicc
setenv CXX mpiicpc
setenv FC  mpiifort
setenv F77 mpiifort
setenv F90 mpiifort
