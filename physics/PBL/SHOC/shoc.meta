  long_name = horizontal loop extent
  units = count
  dimensions = ()
  type = integer
  intent = in
[nzm]
  standard_name = vertical_layer_dimension
  long_name = vertical layer dimension
  units = count
  dimensions = ()
  type = integer
  intent = in
[tcr]
