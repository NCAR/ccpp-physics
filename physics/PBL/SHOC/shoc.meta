  units = K
  dimensions = ()
  type = real
  kind = kind_phys
  intent = in
[tcrf]
  standard_name = reciprocal_of_cloud_phase_transition_temperature_range
  long_name = denominator in cloud phase transition = 1/(tcr-tf)
  units = K-1
  dimensions = ()
  type = real
  kind = kind_phys
  intent = in
[con_cp]
  standard_name = specific_heat_of_dry_air_at_constant_pressure
