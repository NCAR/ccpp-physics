  units = Pa
  dimensions = (horizontal_dimension,vertical_dimension)
  type = real
  kind = kind_phys
  intent = in
  optional = F
[prsi]
  standard_name = air_pressure_at_interface
  long_name = air pressure at model layer interfaces
  units = Pa
  dimensions = (horizontal_dimension,vertical_dimension_plus_one)
  type = real
  kind = kind_phys
  intent = in
  optional = F
[pomg]
