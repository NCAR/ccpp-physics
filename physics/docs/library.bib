	journal = {Journal of Geophysical Research: Atmospheres},
	keywords = {Groundwater recharge, groundwater discharge, climate models},
	number = {D7},
	title = {Development of a simple groundwater model for use in climate models and evaluation with Gravity Recovery and Climate Experiment data},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2006JD007522},
