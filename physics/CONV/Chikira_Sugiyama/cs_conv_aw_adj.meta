  standard_name = gravitational_acceleration
  long_name = gravitational acceleration
  units = m s-2
  dimensions = ()
  type = real
  kind = kind_phys
  intent = in
[sigmafrac]
  standard_name = convective_updraft_area_fraction
  long_name = convective updraft area fraction
