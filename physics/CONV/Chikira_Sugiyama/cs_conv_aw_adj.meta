  dimensions = ()
  type = logical
  intent = in
[do_aw]
  standard_name = flag_for_Arakawa_Wu_adjustment
  long_name = flag for Arakawa Wu scale-aware adjustment
  units = flag
  dimensions = ()
  type = logical
  intent = in
[do_shoc]
  standard_name = flag_for_shoc
  long_name = flag for SHOC
  units = flag
  dimensions = ()
  type = logical
  intent = in
[ntrac]
