  units = flag
  dimensions = ()
  type = integer
  intent = in
[imp_physics_mg]
  standard_name = identifier_for_morrison_gettelman_microphysics_scheme
  long_name = choice of Morrison-Gettelman microphysics scheme
  units = flag
  dimensions = ()
  type = integer
  intent = in
