  units = count
  dimensions = ()
  type = integer
  intent = in
[levs]
  standard_name = vertical_layer_dimension
  long_name = number of veritcal levels
  units = count
  dimensions = ()
  type = integer
  intent = in
[do_cscnv]
  standard_name = flag_for_Chikira_Sugiyama_deep_convection
