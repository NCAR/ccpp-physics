# Standalone GSM
#
## NEMS Application Builder file

COMPONENTS=( FMS FV3 )

FV3_SRCDIR=$ROOTDIR/FV3
FV3_BINDIR=$ROOTDIR/FV3/FV3_INSTALL

FMS_SRCDIR=$ROOTDIR/FMS
FMS_BINDIR=$ROOTDIR/FMS/FMS_INSTALL

if [[ "$FULL_MACHINE_ID" == theia || "$FULL_MACHINE_ID" == cheyenne ]] ; then
  # BUILD_TARGET = $FULL_MACHINE_ID.$NEMS_COMPILER
  CHOSEN_MODULE=$BUILD_TARGET/fv3
  CONFOPT=configure.fv3.$BUILD_TARGET
else
  CHOSEN_MODULE=$FULL_MACHINE_ID/fv3
  CONFOPT=configure.fv3.$FULL_MACHINE_ID
fi
